# FluxNews 환경변수 설정 예시
# 이 파일을 .env로 복사하고 실제 값을 입력하세요

# ===== 데이터베이스 =====
# Supabase PostgreSQL 연결 문자열
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
# 로컬 PostgreSQL (개발용)
# DATABASE_URL=postgresql://username:password@localhost:5432/fluxnews

# Supabase API (필수)
SUPABASE_URL=https://[PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your-anon-key  # 프론트엔드용
SUPABASE_SERVICE_KEY=your-service-role-key  # 백엔드용 (비밀!)

# ===== AI/ML API =====
# OpenAI API (필수) - 뉴스 분석, 기업 추출, 관계 매핑
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxx

# HuggingFace API (선택) - FinBERT 감정분석 가속화
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxx

# ===== 외부 서비스 API =====
# GitHub Personal Access Token - 코드 저장소 관리
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_xxxxxxxxxxxxx

# Slack Bot Token - 실시간 알림 (프리미엄 기능)
SLACK_BOT_TOKEN=xoxb-xxxxxxxxxxxxx
SLACK_TEAM_ID=T0XXXXXXXXX

# Google Maps API - 기업 위치 정보
GOOGLE_MAPS_API_KEY=AIzaSyxxxxxxxxxxxxx

# Brave Search API - 뉴스 검색 보조
BRAVE_API_KEY=BSA-xxxxxxxxxxxxx

# ===== 한국 금융 데이터 API =====
# 한국거래소 API (무료)
KRX_API_KEY=your_krx_api_key

# DART API (공시 정보) - 일 10,000건 제한
DART_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===== 뉴스 소스 API =====
# News API (선택) - 추가 뉴스 소스
NEWS_API_KEY=xxxxxxxxxxxxx

# Reddit API (선택) - 소셜 미디어 분석
REDDIT_CLIENT_ID=xxxxxxxxxxxxx
REDDIT_CLIENT_SECRET=xxxxxxxxxxxxx

# ===== 서버 설정 =====
# FastAPI 백엔드
BACKEND_URL=http://localhost:8000
SECRET_KEY=your-secret-key-here  # openssl rand -hex 32로 생성

# Next.js 프론트엔드
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXTAUTH_SECRET=your-nextauth-secret  # openssl rand -hex 32로 생성
NEXTAUTH_URL=http://localhost:3000

# ===== 결제 서비스 (프로덕션) =====
# Stripe API (프리미엄 구독)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# 토스페이먼츠 (한국 결제)
TOSS_CLIENT_KEY=test_ck_xxxxxxxxxxxxx
TOSS_SECRET_KEY=test_sk_xxxxxxxxxxxxx

# ===== 배포 환경 =====
# Vercel (프론트엔드)
VERCEL_TOKEN=xxxxxxxxxxxxx

# Railway (백엔드 + DB)
RAILWAY_TOKEN=xxxxxxxxxxxxx

# ===== Neo4j (3-6개월 후) =====
# Neo4j AuraDB Free
NEO4J_URI=neo4j+s://xxxxx.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=xxxxxxxxxxxxx

# ===== 개발 환경 =====
NODE_ENV=development  # production, development, test
LOG_LEVEL=debug      # debug, info, warn, error

# ===== 기타 설정 =====
# 뉴스 수집 설정
NEWS_FETCH_INTERVAL=300  # 5분마다 (초 단위)
MAX_NEWS_PER_FETCH=100   # 한 번에 가져올 최대 뉴스 수

# AI 분석 설정
AI_ANALYSIS_BATCH_SIZE=10  # 배치 분석 크기
AI_CONFIDENCE_THRESHOLD=0.7  # AI 신뢰도 임계값

# 사용자 제한
FREE_TIER_DAILY_LIMIT=3      # 무료 사용자 일일 제한
FREE_TIER_WATCHLIST_LIMIT=3  # 무료 사용자 관심기업 제한
PREMIUM_WATCHLIST_LIMIT=50   # 프리미엄 관심기업 제한